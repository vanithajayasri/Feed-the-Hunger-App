<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.app.drashti.drashtiapp">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:name=".SessionApplaication"
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <meta-data
            android:name="com.facebook.sdk.ApplicationId"
            android:value="@string/facebook_app_id" />

        <activity
            android:name=".SplashActivity"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".MainActivity"
            android:screenOrientation="portrait" />

        <provider
            android:name="com.facebook.FacebookContentProvider"
            android:authorities="com.facebook.app.FacebookContentProvider1234"
            android:exported="true" />

        <activity android:name=".RegisterActivity" />
        <activity android:name=".AddDonateActivity" />
        <activity android:name=".ProfileActivity" />
        <activity android:name=".ProfileSettingActivity" />
        <activity android:name=".ChangePasswordActivity" />
        <activity
            android:name=".ViewFoodDetailActivity"
            android:label="View Food Detail" />
        <activity android:name=".ForgotPasswordActivity" />
        <activity android:name=".ViewFoodDetailActivityWithID" />
        <activity
            android:name=".EditFoodDetailActivity"
            android:label="Edit Food Detail" />
        <activity android:name=".AcceptViewFoodDetailActivity" />
        <activity
            android:name=".LoginActivity"
            android:label="@string/title_activity_splash"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".StartingActivity"
            android:label="@string/title_activity_starting"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".Activity.DonateActivity" />
        <activity android:name=".Activity.AcceptActivity" />
        <activity android:name=".Activity.VolunteerActivity"></activity>
    </application>

</manifest>