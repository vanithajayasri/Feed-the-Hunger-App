<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    android:padding="@dimen/activity_horizontal_margin"
    android:background="#FFFFFF"
    tools:context=".Fragment.DonateFragment">

<Button
    android:layout_marginLeft="@dimen/activity_horizontal_margin"
    android:layout_marginRight="@dimen/activity_horizontal_margin"
    android:textColor="#FFFFFF"
    android:background="@android:color/holo_blue_dark"
    android:id="@+id/btnAddNewDonate"
    android:layout_width="match_parent"
    android:layout_gravity="left"
    android:layout_height="wrap_content"
    android:text=" ADD DONATION "
    android:textSize="12sp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="wrap_content">
        <EditText
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:visibility="gone"
            android:inputType="number"
            android:layout_height="wrap_content"
            android:hint="Search by pincode"
            android:id="@+id/edtSearchPin"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btnSearch"
            android:visibility="gone"
            android:text="Search"
            android:textColor="#000"
            />
    </LinearLayout>


   <TextView
       android:layout_width="match_parent"
       android:gravity="center"
       android:visibility="gone"
       android:textSize="14sp"
       android:layout_height="wrap_content"
       android:id="@+id/txtStatus"
       android:text=""/>

    <android.support.v7.widget.RecyclerView
        android:layout_marginTop="@dimen/activity_horizontal_margin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/recyclerDonate"></android.support.v7.widget.RecyclerView>

</LinearLayout>